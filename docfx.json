{
  "metadata": [
    {
      "src": [
        {
          "src": "../Motiv",
          "files": [
            "**/Motiv.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Motiv",
      "_appTitle": "Motiv",
      "_appLogoPath": "images/motiv-logo.svg",
      "pdf": true
    }
  }
}